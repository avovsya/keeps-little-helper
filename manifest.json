{
    "manifest_version": 2,
    "name": "Keep's Little Helper",
    "version": "0.0.1",
    "offline_enabled": true,
    "background": {
        "persistent": false,
        "scripts": [
            "background-script/history.js",
            "background-script/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://keep.google.com/*"
            ],
            "js": [
                "lib/jquery.min.js",
                "lib/lodash.min.js",
                "lib/mousetrap.js",
                "content-script/history-ui.js",
                "content-script/shortcut-handler.js",
                "content-script/content.js"
            ],
            "css": [
                "content-script/content.css"
            ],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],
    "page_action": {
        "default_title": "Keep's Little Helper",
        "default_icon": "popup-script/icon.png",
        "default_popup": "popup-script/popup.html"
    },
    // No special permissions required...
    "permissions": [
        "*://keep.google.com/*",
        "tabs"
    ]
}