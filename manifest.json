{
    "manifest_version": 2,
    "name": "Keep's Helper",
    "version": "0.0.1",
    "offline_enabled": true,
    "background": {
        "persistent": false,
        "scripts": [
            "history.js",
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://keep.google.com/*"
            ],
            "js": [
                "mousetrap.js",
                "history-ui.js",
                "content.js"
            ],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],
    "page_action": {
        "default_title": "Keep's Helper",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    // No special permissions required...
    "permissions": [
        "*://keep.google.com/*",
        "tabs"
    ]
}
